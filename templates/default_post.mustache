<div class="post">
	{{# metadata.title }}
	<div class="post-title">
		<h2>
		<a href="/{{base_path}}post/{{metadata.slug}}">
{{ metadata.title }}
		</a>
		</h2>
	</div>
	{{/ metadata.title }}

	{{# metadata.tags }}
	<ul class="tags-list">
		{{# metadata.tags.values }}<li>{{ . }}</li>{{/ metadata.tags.values }}
	</ul>
	{{/ metadata.tags }}

	{{# content }}
	<div class="post-body">
		{{ content }}
	</div>
	{{/ content }}

</div>
